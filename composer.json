{
    "name": "devtrope/teardrops",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Quentin SCHIFFERLE",
            "email": "dev.trope@gmail.com"
        }
    ],
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "require": {
        "devtrope/ludens": "*",
        "twig/twig": "^3.21"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../ludens",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
